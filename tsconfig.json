{
  "compilerOptions": {
    "module": "ES6",
    "lib": ["es6", "dom", "esnext"],
    "target": "ES2015",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types/",
    "outDir": "dist",
    "rootDir": "src"
    // "jsx": "react",
    // "jsxFactory": "h",
    // "jsxFragmentFactory": "Fragment"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
